$(document).ready(function(){$(".accordion-item .title").on("click",function(){$(this).parent().hasClass("active")?$(this).parent().removeClass("active").find(".drop-accordion").slideUp():($(".accordion-item").removeClass("active").find(".drop-accordion").slideUp(),$(this).parent().addClass("active").find(".drop-accordion").slideDown())}),$(".topmenu-wrapper .mainmenu .navbar-nav a[href='/']").addClass("various"),$(".topmenu-wrapper .mainmenu .navbar-nav a[href='/']").attr("href","#akcii"),$("footer .navbar-nav li").each(function(a,n){$(n).find("ul").length&&$(n).append('<span class="arrow"></span>')}),$(".show__cart__link a").click(function(a){a.preventDefault(),$(this).parent().hide(),$(".show__cart__wrapper .maps").fadeIn()})});